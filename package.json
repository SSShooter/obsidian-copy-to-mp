{
	"name": "vscode-copy-to-mp",
	"displayName": "Copy to MP",
	"description": "Copy the current document to clipboard as HTML (optimized for WeChat MP), including images",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.80.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-copy-to-mp.copyAsHtml",
				"title": "Copy As HTML for MP"
			}
		],
		"configuration": {
			"title": "Copy to MP Settings",
			"properties": {
				"copyToMp.styleSheetStyle": {
					"type": "string",
					"default": "wechat-default",
					"enum": [
						"wechat-default",
						"latepost-depth",
						"wechat-ft",
						"wechat-anthropic",
						"wechat-tech",
						"wechat-elegant",
						"wechat-deepread",
						"wechat-nyt",
						"wechat-jonyive",
						"wechat-medium",
						"wechat-apple",
						"kenya-emptiness",
						"hische-editorial",
						"ando-concrete",
						"gaudi-organic",
						"guardian",
						"nikkei",
						"lemonde"
					],
					"description": "Select the stylesheet style to apply to copied HTML"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/highlight.js": "^9.12.4",
		"@types/mocha": "^10.0.1",
		"@types/node": "18.x",
		"@types/vscode": "^1.80.0",
		"@typescript-eslint/eslint-plugin": "^6.4.1",
		"@typescript-eslint/parser": "^6.4.1",
		"eslint": "^8.47.0",
		"ts-loader": "^9.4.4",
		"typescript": "^5.1.6",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"@types/markdown-it": "^12.2.3",
		"@types/mime-types": "^3.0.1",
		"cheerio": "^1.2.0",
		"highlight.js": "^11.11.1",
		"markdown-it": "^13.0.1",
		"mime-types": "^3.0.2"
	}
}