{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": {
        "owner": "webpack",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*)$",
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "webpack is watching the files\\.\\.\\.",
          "endsPattern": "compiled successfully"
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "build"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "compile",
      "problemMatcher": [
        "$tsc"
      ],
      "group": "build"
    }
  ]
}
